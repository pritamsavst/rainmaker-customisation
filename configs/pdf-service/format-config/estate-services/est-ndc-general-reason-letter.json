{
    "key": "est-ndc-general-reason-letter",
    "config": {
        "defaultStyle": {
            "font": "Cambay"
        },
        "content": [
            {
                "style": "noc-head",
                "table": {
                  "widths": [
                   50, "*"
                  ],
                  "body": [
                    [
                     {
                       "image": "{{logo}}",
                       "width": 50,
                       "margin": [8, 10, 10, 0]
                     },
                     {
                       "stack": [
                         {
                           "text": "{{header}}",
                           "style": "receipt-logo-header"
                         },
                         {
                           "text":"{{colony_branch}}",
                           "style":"receipt-logo-sub-header"
                         },
                         {
                            "text": "New Deluxe Building, Sector 17-E, Chandigarh",
                            "style":"receipt-logo-sub-header"
                        }
                       ],
                       "alignment": "center",
                         "margin": [
                           0,
                           12,
                           0,
                           0
                         ]
                     }
                    ]
                  ]
                },
                "layout": "noBorders"
            },
            {
                "style": "pt-reciept-citizen-header",
                "columns": [
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "No.MC/Estate/2019/ ",
                        "bold": true
                      },
                      {
                        "text": "{{applicationNumber}}",
                        "bold": false
                      }
                    ],
                    "alignment": "left"
                  },
                  {
                    "text": ""
                  },
                  {
                    "width":"auto",
                    "text": [
                      {
                        "text": "Dated ",
                        "bold": true
                      },
                      {
                        "text": " {{dateOfAllotment}}",
                        "bold": false
                      }
                    ],
                    "alignment": "right"
                  }
                ]
              },
          
            {
                "margin": [0, 20, 0, 0],
                "text": "To",
                "alignment": "left",
                "style": "pdfContent"
            },
            {
                "margin": [0, 10, 0, 0],
                "stack": [{
                        "preserveLeadingSpaces": true,
                        "text": "             {{transferorName}}",
                        "style": "pdfContent",
                        "width": "*"
                    },
                    {
                        "preserveLeadingSpaces": true,
                        "text": "             {{transferorAddress}}",
                        "style": "pdfContent",
                        "width": "*"
                    }
                ]
            },
            {
                "margin": [0, 10, 0, 0],
                "columns": [{
                        "text": "Sub:-",
                        "style": "pdfContent",
                        "bold": true,
                        "width": "auto",
                        "alignment": "left"

                    },
                    {
                        "margin": [10, 0, 0, 0],
                        "width": "*",
                        "text": [{
                                "text": "Issuance of ownership certificate and No Due Certificate in r/o SCF/SCO/Booth/Residential Site No.  "
                            },
                            {
                                "text": "{{siteNumber}} ",
                                "bold": true

                            },
                            {
                                "text": "{{sectorNumber}}"
                            }
                        ],
                        "style": "pdfContent"
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": [{
                        "text": "             As per allotment file maintained in this office SCF/SCO/Booth/Residential Site No. "
                    },
                    {
                        "text": " {{siteNumber}}  ","bold":true
                    },
                    {
                        "text": "Chandigarh stands in the name of Smt/Shri "
                    },
                    {
                        "text": "{{transferorName}} ","bold":true
                    },
                    {
                        "text": "Nothing is due on account of premium and extension fees."
                    }
                ]
            },
            {
                "margin": [0, 20, 0, 0],
                "style": "pdfContent",
                "preserveLeadingSpaces": true,
                "text": "             This ownership certificate is not valid for sale/gift/transfer and is only issued in connection with __ ______ "
            },
            {
                "margin": [0, 20, 0, 0],
                "alignment": "right",
                "stack": [{
                        "text": "Section Officer (E).",
                        "style": "pdfContent",
                        "bold": true
                    },
                    {
                        "text": "Municipal Corporation, ",
                        "style": "pdfContent",
                        "bold": true

                    },
                    {
                        "text": "Chandigarh ",
                        "style": "pdfContent",
                        "bold": true

                    }

                ]
            },
            {
                "margin": [0, 20, 10, 10],
                "columns": [{
                        "text": "Endst. No. MC/Estate/2019/",
                        "style": "pdfContent",
                        "alignment": "left"
                    },
                    {
                        "text": "Dated:__________",
                        "style": "pdfContent",
                        "alignment": "right"
                    }
                ]
            },
            {
                "stack": [{
                    "preserveLeadingSpaces": true,
                    "text": "             Copy of the above is forwarded to the SDO(B). Estate Office, UT, Chandigarh for information and necessary action please ",
                    "style": "pdfContent"
                }]
            }


        ],
        "styles": {
            "pdfContent": {        
                "color": "#000000",
                "bold": false,
                "fontSize": 11,
                "fontWeight": 400,
                "margin": [
                  3,
                  0,
                  0,
                  0
                ]
            },
            "pt-reciept-citizen-header": {
                "fontSize": 12,
                "bold": true,
                "margin": [
                  0,
                  8,
                  0,
                  0
                ],
                "color": "#484848"
              },
            "receipt-logo-header": {
                "color": "#484848",
                "fontSize": 14,
                "bold": true,
                "letterSpacing": 0.74,
                "margin": [
                  0,
                  0,
                  0,
                  5
                ]
              },
              "receipt-logo-sub-header": {
                "color": "#484848",
                "fontFamily": "Roboto",
                "fontSize": 13,
                "letterSpacing": 1.6,
                "margin": [
                  0,
                  6,
                  0,
                  0
                ]
              },
              "noc-head": {
                "margin": [
                  -25,
                  -25,
                  0,
                  1
                ]
              }

        }
    }
}